<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F5F5F5"
    tools:context=".Fragmentos.TipoCabeloFragment">


    <LinearLayout
        android:id="@+id/linearScrollMId"
        android:layout_width="match_parent"
        android:layout_height="738dp"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:id="@+id/txvTipocabeloMId"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:gravity="center"
            android:text="@string/txt_Tipo_de_cabelo_natural"
            android:textSize="26sp" />


        <HorizontalScrollView
            android:id="@+id/scrollImagensMId"
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginTop="0dp"
            android:background="#F5F5F5">


            <LinearLayout
                android:id="@+id/linearTcabelosMacId"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F5F5F5"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgLisoId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#F5F5F5"
                    android:elevation="2dp"
                    android:src="@drawable/lisom" />

                <ImageView
                    android:id="@+id/imgonduladomId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#F5F5F5"
                    android:elevation="2dp"
                    android:src="@drawable/onduladom" />

                <ImageView
                    android:id="@+id/imgcacheadomId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#F5F5F5"
                    android:elevation="2dp"
                    android:src="@drawable/cacheadom" />

                <ImageView
                    android:id="@+id/imgcrespomId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="#F5F5F5"
                    android:elevation="2dp"
                    android:src="@drawable/crespom" />

            </LinearLayout>


        </HorizontalScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="189dp">

            <Button
                android:id="@+id/btProximoMId"
                android:layout_width="423dp"
                android:layout_height="296dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="#F5F5F5"
                android:gravity="center"
                android:text="@string/txt_AvanÃ§ar"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contProcedimentoId"
                app:layout_constraintVertical_bias="0.52" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>