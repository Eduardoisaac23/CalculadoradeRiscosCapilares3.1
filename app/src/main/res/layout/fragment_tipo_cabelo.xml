<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#F5F5F5"
    tools:context=".Fragmentos.TipoCabeloFragment">


    <LinearLayout
        android:id="@+id/linearScrollId"
        android:layout_width="match_parent"
        android:layout_height="276dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="-1dp"
        android:background="#F5F5F5"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48000002">


        <TextView
            android:id="@+id/txvTipocabelo"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Tipo de cabelo natural"
            android:textSize="26dp" />


        <HorizontalScrollView
            android:id="@+id/scrollImagensId"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginTop="0dp"
            android:background="#F5F5F5">


            <LinearLayout
                android:id="@+id/linearTcabelosFemiId"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="#F5F5F5"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgOndulado2aId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/tipo2a" />

                <ImageView
                    android:id="@+id/imgLiso1aId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    android:src="@drawable/tipo1a" />


                <ImageView
                    android:id="@+id/imgCrespo4bId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/tipo4a" />

                <ImageView
                    android:id="@+id/imgCacheado3aId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@drawable/tipo3a" />


                <ImageView
                    android:id="@+id/imgLisomId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    android:src="@drawable/lisom" />

                <ImageView
                    android:id="@+id/imgonduladomId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    android:src="@drawable/onduladom" />

                <ImageView
                    android:id="@+id/imgcacheadomId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    android:src="@drawable/cacheadom" />

                <ImageView
                    android:id="@+id/imgcrespomId"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:elevation="2dp"
                    android:src="@drawable/crespom" />

            </LinearLayout>


        </HorizontalScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            tools:layout_editor_absoluteY="189dp">

            <Button
                android:id="@+id/btProximoId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="PrÃ³ximo"
                android:textSize="16dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.973"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/contProcedimentoId"
                app:layout_constraintVertical_bias="0.948" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>